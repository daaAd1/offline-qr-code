{
    "version": "0.2.0",
    "configurations": [
        {
          "name": "Launch addon",
          "type": "firefox",
          "request": "attach",
          "addonType": "webExtension",
          "addonPath": "${workspaceFolder}/src"
      },
      {
        "type": "node",
        "request": "launch",
        "name": "Mocha Tests",
        "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
        "args": [
          "-u",
          "tdd",
          "--timeout",
          "999999",
          "--colors",
          "${workspaceFolder}/test"
        ],
        "internalConsoleOptions": "openOnSessionStart"
      }
    ],

}
