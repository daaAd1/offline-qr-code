{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "version": "0.1",
  "author": "rugk",

  "description": "__MSG_extensionDescription__",
  "homepage_url": "https://github.com/rugk/offline-qr-code",

  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "19": "icons/icon.svg",
      "38": "icons/icon.svg"
    },
    "default_title": "QR code",
    "default_popup": "popup/qrcode.html"
  },

  "content_security_policy": "default-src 'self'; img-src data:",
  "icons": {
    "48": "icons/icon.svg",
    "96": "icons/icon.svg"
  },
  "default_locale": "en",

  "permissions": [
    "activeTab"
  ]
}
